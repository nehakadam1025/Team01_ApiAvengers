				{
					"name": "Get All Batches",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"const response = pm.response.json();\r",
									"\r",
									"// Test for response body structure\r",
									"pm.test(\"Response is an array\", function () {\r",
									"    pm.expect(response).to.be.an('array');\r",
									"});\r",
									"\r",
									"// Loop through each batch and check properties\r",
									"response.forEach(batch => {\r",
									"    pm.test(`Batch ID ${batch.batchId} has required fields`, function () {\r",
									"        pm.expect(batch).to.have.all.keys('batchId', 'batchName', 'batchDescription', 'batchStatus', 'batchNoOfClasses', 'programId', 'programName');\r",
									"    });\r",
									"});\r",
									"\r",
									"const jsonData = pm.response.json();\r",
									"const batches = jsonData || [];\r",
									"\r",
									"// Helper function to generate random letters\r",
									"function randomLetters(len) {\r",
									"    const letters = \"ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz\";\r",
									"    let s = \"\";\r",
									"    for (let i = 0; i < len; i++) {\r",
									"        s += letters.charAt(Math.floor(Math.random() * letters.length));\r",
									"    }\r",
									"    return s;\r",
									"}\r",
									"\r",
									"// Helper function to generate random numbers (1-99)\r",
									"function randomBatchNumber() {\r",
									"    return Math.floor(Math.random() * 99) + 1;\r",
									"}\r",
									"\r",
									"if (batches && batches.length > 0) {\r",
									"    // Filter active batches\r",
									"    const activeBatches = batches.filter(batch => \r",
									"        batch.batchStatus && batch.batchStatus.toLowerCase() === 'active'\r",
									"    );\r",
									"\r",
									"    if (activeBatches && activeBatches.length > 0) {\r",
									"        // Sort by batchId\r",
									"        const sorted = activeBatches.sort((a, b) => a.batchId - b.batchId);\r",
									"        \r",
									"        const timestamp = Date.now();\r",
									"        \r",
									"        // For GET operations - use first batch\r",
									"        pm.environment.set(\"getBatchId\", sorted[0].batchId);\r",
									"        pm.environment.set(\"getBatchName\", sorted[0].batchName);\r",
									"        \r",
									"        // For GET by Program ID\r",
									"        if (sorted[0].programId) {\r",
									"            pm.environment.set(\"getProgramIdForBatch\", sorted[0].programId);\r",
									"        }\r",
									"        \r",
									"        // Store program name for creating batch names\r",
									"        if (sorted[0].programName) {\r",
									"            pm.environment.set(\"programNameForBatch\", sorted[0].programName);\r",
									"            const batchSeq = randomBatchNumber();\r",
									"            pm.environment.set(\"newBatchName\", `${sorted[0].programName}${batchSeq}`);\r",
									"        }\r",
									"        \r",
									"        // For CREATE - generate unique batch data\r",
									"        pm.environment.set(\"newBatchDescription\", `Batch-${randomLetters(4)}`);\r",
									"        pm.environment.set(\"newBatchNoOfClasses\", Math.floor(Math.random() * 50) + 10); // 10-59 classes\r",
									"        pm.environment.set(\"newBatchStatus\", \"Active\");\r",
									"        pm.environment.set(\"newProgramId\", sorted[0].programId);\r",
									"        \r",
									"        // For UPDATE operations - use second batch\r",
									"        if (sorted.length > 1) {\r",
									"            pm.environment.set(\"updateByBatchId\", sorted[1].batchId);\r",
									"            pm.environment.set(\"updateByBatchName\", sorted[1].batchName);\r",
									"            pm.environment.set(\"updatedBatchDescription\", `Updated-${timestamp}`);\r",
									"            pm.environment.set(\"updatedBatchNoOfClasses\", Math.floor(Math.random() * 50) + 10);\r",
									"            pm.environment.set(\"updateBatchStatus\", \"Active\");\r",
									"            pm.environment.set(\"updateProgramId\", sorted[1].programId);\r",
									"            pm.environment.set(\"updateProgramName\", sorted[1].programName);\r",
									"        }\r",
									"        \r",
									"        // For DELETE operations - use last batch\r",
									"        if (sorted.length > 2) {\r",
									"            pm.environment.set(\"deleteBatchId\", sorted[sorted.length - 1].batchId);\r",
									"        }\r",
									"        \r",
									"        console.log(\"✅ Batch test data setup complete!\");\r",
									"        console.log(\"Total batches:\", batches.length);\r",
									"        console.log(\"Active batches:\", activeBatches.length);\r",
									"        console.log(\"New batch name:\", pm.environment.get(\"newBatchName\"));\r",
									"    } else {\r",
									"        console.log(\"⚠️ No active batches found!\");\r",
									"    }\r",
									"} else {\r",
									"    console.log(\"⚠️ No batches returned in response!\");\r",
									"}\r",
									"\r",
									"// Test assertions\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Response is an array\", function () {\r",
									"    pm.expect(batches).to.be.an('array');\r",
									"});\r",
									"\r",
									"pm.test(\"Batches contain required fields\", function () {\r",
									"    if (batches.length > 0) {\r",
									"        pm.expect(batches[0]).to.have.property('batchId');\r",
									"        pm.expect(batches[0]).to.have.property('batchName');\r",
									"        pm.expect(batches[0]).to.have.property('programId');\r",
									"        pm.expect(batches[0]).to.have.property('batchStatus');\r",
									"    }\r",
									"});\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
